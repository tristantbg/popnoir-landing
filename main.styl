*
  box-sizing border-box

html
  font-size 0.485vw

@media (max-width: 1024px)
  html
    font-size 11px


body
  background white
  color black
  padding 0
  margin 0
  overflow hidden
  font-family Helvetica, Arial, sans-serif
  font-size 1rem
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust 100%
  -webkit-tap-highlight-color transparent
  &.intro
    #intro
      visibility visible
    #corner::after
      border-right-color: rgb(255,0,0);
      border-top-color: rgb(255,0,0);

a, a:hover, a:visited, a:active
  color white
  text-decoration none

em
  font-family 'RMI'
  font-style normal

p
  margin 0

#landing
  display flex
  justify-content center
  align-items center
  position fixed
  top 0
  left 0
  width 100%
  height 100%

#logo
  svg
    display block
    height 35vmin
    path
      fill black

@media (max-width: 1024px)
  #logo
    svg
      display block
      height 60vmin
  #landing
    height 80%

#message
  position fixed
  bottom 0
  left 0
  width 100%
  background black
  color white
  padding 1em

#newsletter
  div.x
    display flex
    flex-wrap wrap
  .form
    margin-top 1em
    margin-bottom 1em
    color alpha(white, 0.6)
    height 1em
    &::before
      content 'E-MAIL'
    display flex
    align-items center
    *
      margin 0
      display flex
    .primary-group, .message_area
      margin-right 1em
      margin-left 1em
    .message_area
      border none !important
      background transparent !important
      color white !important
    input, button
      color white
      text-transform uppercase
      -webkit-apparence none
      border 1px solid alpha(white, 0.2)
      background black
      align-items center
    button
      border none
      font-size 1rem

@media (min-width: 1024px)
  #legal
    overflow hidden
    height 0
    transition height 300ms ease
  #newsletter
    .form
      margin-left 2em
      margin-top 0
      margin-bottom 0
  &:hover, &:focus, &:active, &:target
    #legal
      height 2.3em
